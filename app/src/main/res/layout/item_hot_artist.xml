<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/btn_more_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_hot_artist_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_more"
        android:textColor="@color/text_secondary_light"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_hot_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_hot_artist_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hot_artist_name"
        android:layout_marginTop="8dp" />

</RelativeLayout>