<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="KaraokeLoverTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:popupMenuStyle">@style/KaraokeLoverTheme.PopupMenu</item>
        <item name="android:itemTextAppearance">@style/KaraokeLoverTheme.MenuItemTextAppearance
        </item>
        <item name="alertDialogTheme">@style/KaraokeLoverTheme.AlertDialog</item>
    </style>

    <style name="KaraokeLoverTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KaraokeLoverTheme.SettingActivity" parent="KaraokeLoverTheme">
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:alertDialogTheme">@style/KaraokeLoverTheme.Dialog</item>
        <item name="android:dialogTheme">@style/KaraokeLoverTheme.Dialog</item>
    </style>

    <style name="KaraokeLoverTheme.ArtistWithSongs" parent="KaraokeLoverTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="KaraokeLoverTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="KaraokeLoverTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="KaraokeLoverTheme.DarkPopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


    <style name="SearchViewTheme" parent="KaraokeLoverTheme.AppBarOverlay">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.KaraokeLover.SearchView</item>
    </style>

    <style name="KaraokeLoverTheme.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="KaraokeLoverTheme.Translucent.Zing">
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="KaraokeLoverTheme.Translucent.Zing.BottomSheet">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnterTransition">@transition/artist_biography_sheet_enter</item>
        <item name="android:windowReturnTransition">@transition/artist_biography_sheet_return</item>
    </style>

    <style name="SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rapidly</item>
    </style>

    <style name="KaraokeLoverTheme.Translucent.Search">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SearchWindowAnimations</item>
        <item name="android:windowEnterTransition">@transition/search_enter</item>
    </style>

    <!--Style for Widget-->

    <style name="Widget.KaraokeLover" parent="android:Widget" />

    <style name="TextAppearance.Main" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.KaraokeLover.EmptyText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">24sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Widget.KaraokeLover.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon" tools:targetApi="lollipop_mr1">
            @android:color/transparent
        </item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="KaraokeTubeTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="KaraokeTubeSheetTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="KaraokeLoverTheme.AlertDialogContentTextStyle">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <style name="KaraokeLoverTheme.Dialog" parent="MaterialBaseTheme.AlertDialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Popup Menu style -->

    <style name="KaraokeLoverTheme.MenuItemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@drawable/selector_popup_textcolor</item>
    </style>


    <style name="KaraokeLoverTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
    <!-- End of Popup Menu style -->

    <!-- Alert Dialog style -->
    <style name="KaraokeLoverTheme.AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!-- End of Alert Dialog style -->

</resources>
